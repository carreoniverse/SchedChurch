extends ../../../../templates/mainwithsession

block content
        <link rel="stylesheet" href="/styles/funeral.css">
        <div class="container">
        <div class="jumbotron">
        <form class="form-horizontal" method='post' action='funeralmass'>
                
                <fieldset>
                <legend> FUNERAL MASS </legend>
                <legend> (REQUEST FORM) </legend>
                input(type="hidden" name="deadid" value=`${user.int_guestid}`)
                <div class="form-group">
                <label for="select" class="col-lg-2 control-label">Deceased's Relation:</label>
                <div class="col-lg-10">
                        <select name="relation">
                        <option value="01">Parent</option>
                        <option value="02">Spouse</option>
                        <option value="03">Sibling</option>
                        <option value="04">Boyfriend/Girlfriend</option>
                        <option value="05">Aunt/Uncle</option>
                        <option value="06">Cousin</option>
                        <option value="07">Grand Child</option>
                        <option value="08">Neice/Nephew</option>
                        <option value="09">Friend</option>
                        </select>
                
                </div>
                </div>
                <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Deceased's Last Name:</label>
                <div class="col-lg-10">
                        <input type="text" name="deadlastname" class="form-control" placeholder="Last name">
                </div>
                </div>

                <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Deceased's First Name:</label>
                <div class="col-lg-10">
                        <input type="text" name="deadfirstname" class="form-control" placeholder="First name">
                </div>
                </div>


                <div class="form-group">
                <label for="inputName" class="col-lg-2 control-label">Deceased's Middle Name:</label>
                <div class="col-lg-10">
                        <input type="text" name="deadmiddlename" class="form-control" placeholder="Middle name">
                </div>
                </div>

                <div class="form-group">
                <label for="inputBirth" class="col-lg-2 control-label">Birth-date:</label>
                <div class="col-lg-10">
                        <input type="date" name="deadbirthday" class="form-control" placeholder="Enter deceased's birth-date">
                </div>
                </div>
                <div class="form-group">
                <label for="inputAddress" class="col-lg-2 control-label">Address:</label>
                <div class="col-lg-10">
                        <input type="string" name="deadaddress" class="form-control" placeholder="Enter address">
                </div>
                </div>
                <div class="form-group">
                <label for="inputDate" class="col-lg-2 control-label">Date of Funeral Mass:</label>
                <div class="col-lg-10">
                        <input type="date" name="funeraldate" class="form-control" placeholder="Enter funeral mass date">
                </div>
                </div>    
                <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                        <button type="reset" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                </div>
                </fieldset>
        </form>
        </div>
        </div>
        <div class="footer">
                <p> FOLLOW US ON SOCIAL MEDIA </p>
                <i class="fa fa-facebook fa-2x cust" aria-hidden="true"></i>
                <i class="fa fa-twitter fa-2x cust" aria-hidden="true"></i>
                <i class="fa fa-instagram fa-2x cust" aria-hidden="true"></i>
                <i class="fa fa-youtube fa-2x cust" aria-hidden="true"></i>
                <i class="fa fa-pinterest fa-2x cust" aria-hidden="true"></i>
                <i class="fa fa-linkedin fa-2x cust" aria-hidden="true"></i>
                <hr size="20">
                <f2> https://churchtogo.io </f2>
        </div>